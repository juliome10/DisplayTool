              <td> <%= campo.subtipo %> </td>
              <td> <%= button_to "Editar", {:controller => "campos", :action => "edit", :id => campo.id}, :method => :get %> </td>
              <td> <%= button_to "Eliminar", {:controller => "campos", :action => "destroy", :id => campo.id}, :idFormato => @formato.id, :method => :delete %> </td>
